<body class="lobby">
    <div class="jumbotron">
        <div id="startingScreen">
            <h1 class="display-4" id="tervetuloa">Tervetuloa pelaamaan Piirtoaliasta!</h1>
            <hr class="my-4">
            <!-- <a class="btn btn-primary btn-lg" href="/draw/Piirtoalias" role="button">Aloita peli</a> -->
        </div>
        <p class="card-text">Anna nimimerkki</p>
        <form id="loginForm">
            <div class="input-group mb-3">
                <input type="text" class="form-control" autocomplete="off" placeholder="name..." id="nameInput">
                <div class="input-group-append">
                    <% for(var ns of namespaces) {%>
                        <!-- <li><a href="/draw/<%=ns%>"><%= ns %></a></li> -->
                        <a class="btn btn-primary" type="submit" href="/draw/<%=ns%>">>Aloita peli</a>
                    <% } %>
                </div>
            </div>
        </form>
    </div>
    <script src="/js/chat.js" type="module"></script>
    <script src="/js/draw.js" type="module"></script>
</body>
